<div class="collapse collapse-arrow border border-base-300 rounded-none"
    hx-get="/payments/<%=reference%>"
    hx-target=".payment_details_<%=reference%>"
    hx-swap="innerHTML"
    htx-indicator=".htmx-indicator-<%=reference%>">
  <input type="radio" name="my-accordion-payment"/>
  <div class="grid grid-cols-6 text-sm collapse-title">
    <div>
      <span class="font-bold"><%= reference %></span><br/>
      <% case status when "pending"%>
        <span class="badge badge-ghost badge-sm bg-gray-500 text-white "> <%= status %></span>
      <%when "received"%>
        <span class="badge badge-ghost badge-sm bg-blue-500 text-white"> <%= status %></span>
      <%when "verifying"%>
        <span class="badge badge-ghost badge-sm bg-yellow-500 text-white"> <%= status %></span>
      <%when "verified"%>
        <span class="badge badge-ghost badge-sm bg-teal-500 text-white"> <%= status %></span>
      <%when "cancelled"%>
        <span class="badge badge-ghost badge-sm bg-rose-500 text-white"> <%= status %></span>
      <%when "delivered"%>
        <span class="badge badge-ghost badge-sm bg-green-500 text-white"> <%= status %></span>
      <% end %>
    </div>
    <div>
      <span><%= beneficiary_name %></span>
    </div>
    <div>
      <div class="flex items-center gap-3">
        <div class="avatar">
          <div class="mask mask-squircle">
            <ion-icon name="cash-outline"></ion-icon>
          </div>
        </div>
        <div>
          <div class="font-bold"><%= sender_name %></div>
          <div class="text-sm opacity-50"><%= sender_country %></div>
        </div>
      </div>
    </div>
    <div>
      <span><%= sender_email %></span>
    </div>
    <div>
      <span><%= amount_from %> <%= currency_from %></span>
    </div>
    <div>
      <span><%= amount_to %> <%= currency_to %></span>
    </div>
  </div>
  <div class="collapse-content bg-base-200 payment_details_<%=reference%>">
    <div class="htmx-indicator-<%=reference%> grid w-full place-content-center place-items-center p-8">
      <img class="max-h-12" src="images/bars.svg"/></img>
  </div>
</div>
</div>